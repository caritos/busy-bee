<#import "../_layout.ftl" as layout />
<@layout.header>
    <div>
        <h3>Edit Teams</h3>
        <form action="/teams/${team.id}" method="post">
            <p>
                <input type="text" name="name" value="${team.name}">
            </p>
            <p>
                <input type="submit" name="_action" value="update">
            </p>
        </form>
    </div>
    <div>
        <form action="/teams/${team.id}" method="post">
            <p>
                <input type="submit" name="_action" value="delete">
            </p>
        </form>
    </div>
</@layout.header>
